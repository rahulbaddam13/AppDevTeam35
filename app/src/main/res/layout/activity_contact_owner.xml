<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactOwner">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">



    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_centerHorizontal="true"
        android:text="User Name:"
        android:textColor="#4169e1"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textStyle="bold">

    </TextView>

            <TextView
                android:id="@+id/ownerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:background="#bebebe"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:text="Owner Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ownerName"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Email:"
        android:layout_marginLeft="10dp"
        android:textColor="#4169e1"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ownerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:autoLink="email"
        android:layout_marginLeft="10dp"
        android:padding="2dp"
        android:text="Owner Email"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ownerEmail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Phone Number:"
        android:textColor="#4169e1"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/phoneNumber" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneLabel"
        android:layout_marginLeft="10dp"
        android:autoLink="phone"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:text="Phone number"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/sendMail"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumber"
        android:backgroundTint="@color/purple_200"
        android:text="Send Application" />





        </RelativeLayout>

</ScrollView>