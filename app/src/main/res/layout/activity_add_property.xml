        <EditText
            android:id="@+id/et_noOfRoom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/iv_houseImage"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_entries"
            android:hint="Enter number of Room"
            android:inputType="number"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="#696969"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_bath"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_noOfRoom"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_entries"
            android:hint="Enter number of Bathrooms"
            android:inputType="number"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="#696969"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_rentPerRoom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_bath"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_entries"
            android:hint="Enter Rent"
            android:inputType="number"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="#696969"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_houseDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_rentPerRoom"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_entries"
            android:hint="Additional Notes"
            android:lines="5"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="#696969"
            android:textSize="16sp" />

